<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Calculator"
        tools:targetApi="31">
        <activity
            android:name=".CalculatorViewModel"
            android:exported="false"
            android:label="@string/title_activity_calculator_view_model"
            android:theme="@style/Theme.Calculator" />
        <activity
            android:name=".CalculatorState"
            android:exported="false"
            android:label="@string/title_activity_calculator_state"
            android:theme="@style/Theme.Calculator" />
        <activity
            android:name=".CalculatorOperation"
            android:exported="false"
            android:label="@string/title_activity_calculator_operation"
            android:theme="@style/Theme.Calculator" />
        <activity
            android:name=".CalculatorButton"
            android:exported="false"
            android:label="@string/title_activity_calculator_button"
            android:theme="@style/Theme.Calculator" />
        <activity
            android:name=".CalculatorAction"
            android:exported="false"
            android:label="@string/title_activity_calculator_action"
            android:theme="@style/Theme.Calculator" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Calculator">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>